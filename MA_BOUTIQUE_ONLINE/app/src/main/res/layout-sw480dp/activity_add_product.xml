<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivProducto"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:srcCompat="@drawable/top_logo_login" />

            <Button
                android:id="@+id/btnRegistrar"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="106dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_blue"
                android:onClick="selectImageFromGallery"
                android:text="Seleccionar"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/etnombre"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_logout"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Nombre Producto"
                android:inputType="text"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="28dp" />

            <EditText
                android:id="@+id/etdescripcion"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_logout"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Descripcion Producto"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="28dp" />

            <EditText
                android:id="@+id/etUnidad"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_logout"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Productos Disponibles"
                android:inputType="text"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="28dp" />

            <EditText
                android:id="@+id/etPrecio"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_logout"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Precio"
                android:inputType="text"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="28dp" />

            <EditText
                android:id="@+id/etCategoria"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_logout"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Categoria"
                android:inputType="text"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="28dp" />

            <Button
                android:id="@+id/btProducto"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_blue"
                android:onClick="createProduct"
                android:text="AÃ±adir Producto"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="960dp"
                    android:layout_height="332dp"
                    android:layout_marginTop="60dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/bottombackground" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="181dp"
                    android:layout_height="47dp"
                    android:layout_marginEnd="708dp"
                    android:layout_marginBottom="20dp"
                    android:text="La Boutique"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintVertical_bias="0.188" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="195dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="112dp"
                    android:layout_marginEnd="200dp"
                    android:text="Online"
                    android:textColor="#f1cb0b"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.122"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView4" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>